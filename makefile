NAME = GAS
CC = clang++

CFLAGS = -std=c++14 -c -O3 -Wall
LFLAGS = -std=c++14 -lncurses

#------------------------------------------------------------------------------
SOURCE = gas.cpp
OBJECT = gas.o
HEADER = 

#------------------------------------------------------------------------------
$(NAME):$(OBJECT)
	$(CC) -o $@ $(OBJECT) $(LFLAGS)

#------------------------------------------------------------------------------
%.o : %.cpp $(HEADER)
	$(CC) $(CFLAGS) $< -o $@
#------------------------------------------------------------------------------
clean:
	@rm -f *.o
	@rm -f $(NAME)

new: clean $(NAME)


run: $(NAME)
	./$(NAME)

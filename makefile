NAME = GAS
CC = g++

CFLAGS = -std=gnu++14 -O0 -c -Wall -g
LFLAGS = -std=gnu++14 -g

#------------------------------------------------------------------------------
SOURCE = gas.cpp
OBJECT = gas.o

#------------------------------------------------------------------------------
$(NAME):$(OBJECT)
	$(CC) -o $@ $(OBJECT) $(LFLAGS)

#------------------------------------------------------------------------------
%.o : %.cpp $(HEADER)
	$(CC) $(CFLAGS) $< -o $@
#------------------------------------------------------------------------------
clean:
	@rm -f *.o
	@rm -f $(NAME)

new: clean $(NAME)


run: $(NAME)
	./$(NAME)
